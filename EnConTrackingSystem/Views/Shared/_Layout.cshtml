@using System.Runtime.Versioning
@using EnConTrackingSystem.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(EnConTrackingSystem.App_GlobalResources.Lang.AppName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(EnConTrackingSystem.App_GlobalResources.Lang.Programs, "Index", "Programs")</li>
                    <li>@Html.ActionLink(EnConTrackingSystem.App_GlobalResources.Lang.RecentProjects, "About", "Home")</li>
                    <li>@Html.ActionLink(EnConTrackingSystem.App_GlobalResources.Lang.EmergencyProjects, "Contact", "Home")</li>
                </ul>

                @*@Html.Partial("../Language/Dropdown")*@

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EnCon Tracking System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
