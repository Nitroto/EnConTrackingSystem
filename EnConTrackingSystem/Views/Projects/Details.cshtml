@model EnConTrackingSystem.Models.Project
@{
    ViewBag.Title = EnConTrackingSystem.App_GlobalResources.Lang.Details;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>@EnConTrackingSystem.App_GlobalResources.Lang.Client: @Model.Client.Name</li>
    <li>@EnConTrackingSystem.App_GlobalResources.Lang.Consultant: @Model.Consultant.Name</li>
    <li>@EnConTrackingSystem.App_GlobalResources.Lang.ProgramName: @Model.Program.Name</li>
</ul>


<p>
    <div class="btn-toolbar">
        <div class="btn-group">
            @Html.ActionLink(EnConTrackingSystem.App_GlobalResources.Lang.BtnEditProject, "Edit", "Projects", new { id = Model.Id }, new { @class = "btn btn-warning" })
        </div>
        <div class="btn-group">
            @*@Html.BeginForm("Delete", "Projects", new { id = Model.Id }, new { @class = "btn btn-danger" })*@


            @using (Html.BeginForm("Delete", "Projects", new { id = Model.Id }))
            {
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal">
                    @EnConTrackingSystem.App_GlobalResources.Lang.BtnDeleteProject
                </button>

                @Html.Partial("_Delete")
            }


        </div>
    </div>
</p>


